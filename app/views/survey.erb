<h2><%=@survey.name%></h2>
<%if current_user.email == @survey.user.email%>
  <div id='share-url'>
    <h3>Your Survey: <%=@survey.name%></h3>
    <a href="/survey/<%=@survey.id%>"><%=request.base_url%>/survey/<%=@survey.id%></a>
  </div>
<%end%>
<%@survey.questions.each do |question|%>
  <div class='question'><%=question.content%></div>
  <%question.answers.each do |answer|%>
    <input type='radio' name='<%=question.id%>' class='answer'><%=answer.content%>
  <%end%>
<%end%>
